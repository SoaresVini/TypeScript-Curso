//Configurações/opções de compilação

{
    /*
    Pasta onde vai ser salvo os arquivos JS
    e a versão do EcmaScript.

    enrqanto tiver erro não gera um arquivo JS
    */
    "compilerOptions": {
        "outDir": "app/dist/js",
        "target": "ES6",
        "noEmitOnError": true,
        "noImplicitAny": true,  
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },

    // Todos os arquivos que estão em app e joga para dist/js
    "include": ["app/src/**/*"]


}